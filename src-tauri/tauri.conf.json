{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "firstapp",
  "version": "0.1.0",
  "identifier": "com.firstapp.dev",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "firstapp",
        "width": 1500,
        "height": 800,
        "resizable": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://firstapp-3y74.onrender.com http://localhost:3000 http://127.0.0.1:3000; img-src 'self' data: https:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'",
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "auto-gpu-config.bat",
      "fps-boost.reg",
      "fps_extremo.bat",
      "maintenance-cleanup.bat",
      "network-optimizer.bat",
      "performance-optimizer.bat"
    ]
  }
}
