{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://firstapp-3y74.onrender.com/*" },
        { "url": "https://*.onrender.com/*" },
        { "url": "http://127.0.0.1:*" },
        { "url": "http://localhost:*" },
        { "url": "https://*" },
        { "url": "http://*" }
      ]
    },
    "shell:allow-open",
    "shell:allow-spawn",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": [
            "/C",
            "start",
            "",
            "cmd.exe",
            "/C",
            "call",
            { "validator": "^.+$" }
          ]
        },
        {
          "name": "powershell-elevated",
          "cmd": "powershell",
          "args": [
            "-NoProfile",
            "-NonInteractive",
            "-Command",
            { "validator": "^Start-Process .+$" }
          ]
        },
        {
          "name": "regedit-start",
          "cmd": "cmd",
          "args": [
            "/C",
            "start",
            "",
            "regedit.exe",
            "/s",
            { "validator": "^.+\\.reg$" }
          ]
        },
        {
          "name": "regedit-exe",
          "cmd": "regedit.exe",
          "args": [
            "/s",
            { "validator": "^.+\\.reg$" }
          ]
        },
        {
          "name": "regedit",
          "cmd": "regedit",
          "args": [
            "/s",
            { "validator": "^.+\\.reg$" }
          ]
        }
      ]
    },
    "shell:allow-execute",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": [
            "/C",
            "start",
            "",
            "cmd.exe",
            "/C",
            "call",
            { "validator": "^.+$" }
          ]
        },
        {
          "name": "powershell-elevated",
          "cmd": "powershell",
          "args": [
            "-NoProfile",
            "-NonInteractive",
            "-Command",
            { "validator": "^Start-Process .+$" }
          ]
        },
        {
          "name": "regedit-start",
          "cmd": "cmd",
          "args": [
            "/C",
            "start",
            "",
            "regedit.exe",
            "/s",
            { "validator": "^.+\\.reg$" }
          ]
        },
        {
          "name": "regedit-exe",
          "cmd": "regedit.exe",
          "args": [
            "/s",
            { "validator": "^.+\\.reg$" }
          ]
        },
        {
          "name": "regedit",
          "cmd": "regedit",
          "args": [
            "/s",
            { "validator": "^.+\\.reg$" }
          ]
        }
      ]
    }
  ]
}
