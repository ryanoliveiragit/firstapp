{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": [
            "/C",
            "start",
            "",
            "cmd.exe",
            "/C",
            "call",
            { "validator": "^.+$" }
          ]
        },
        {
          "name": "powershell-elevated",
          "cmd": "powershell",
          "args": [
            "-Command",
            "Start-Process",
            "cmd.exe",
            "-Verb",
            "RunAs",
            "-ArgumentList",
            { "validator": "^/C .+$" }
          ]
        },
        {
          "name": "regedit-start",
          "cmd": "cmd",
          "args": [
            "/C",
            "start",
            "",
            "regedit.exe",
            "/s",
            { "validator": "^.+\\.reg$" }
          ]
        },
        {
          "name": "regedit-exe",
          "cmd": "regedit.exe",
          "args": [
            "/s",
            { "validator": "^.+\\.reg$" }
          ]
        },
        {
          "name": "regedit",
          "cmd": "regedit",
          "args": [
            "/s",
            { "validator": "^.+\\.reg$" }
          ]
        }
      ]
    }
  ]
}
